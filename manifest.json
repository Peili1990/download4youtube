{
	"name": "Download4Youtube",
	"description": "This extension helps users download vedio from youtube with one single click.",
	"version": "1.0",
	"permissions": [
		"tabs", "https://www.youtube.com/*", "http://www.youtube.com/*", "storage", "downloads"
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"browser_action": {
		"default_title": "Download4Youtube",
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"content_scripts": [
    {
      "matches": ["https://www.youtube.com/*", "http://www.youtube.com/*"],
	  "css": ["style.css"],
	  "js": ["jquery.min.js"],
      "run_at": "document_end"
    }
  	],
	"manifest_version": 2,
	"icons":{
		"16":"icon_16.png",
		"64":"icon.png"
	},
	"web_accessible_resources": ["download.png"]
}
